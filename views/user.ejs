<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/userStyle.css" />
  </head>
  <body>
    <div class="container">
      <div class="profile"><img src="<%= profile_pic %>" alt="pic" /></div>

      <div class="info">
        <h1><%= name %></h1>
        <h3><%= bio %></h3>
        <div class="abc">
          <span>Loacation: <%= location %></span>
          <span>Repositories: <%= repos %></span>
          <span>Followers: <%= followers %></span>
          <span>Following: <%= following %></span>
        </div>
        <div id="connections">
          <h2>Connections</h2>
          <% for (const key in allConnections) { %>

          <span id="connections-card">
            <img src="<%= allConnections[key].profile_pic %>" alt="con" />
            <a
              href="http://localhost:4000/user/<%= allConnections[key].username %>"
            >
              <%= allConnections[key].username %></a
            >
          </span>

          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
